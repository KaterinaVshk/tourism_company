<div class ="container">
<div class="row">
<div class="col-lg-12 offset-lg-1" >
  <% if notice %>
  <div class="bs-example"> 
  <div class="alert alert-success success-dismissible fade show" role="notice">
  <strong class="alert text-center" align="center"> <%= notice %> </strong> 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
</div>
<% end %>
<% if alert %>
<div class="bs-example"> 
<div class="alert alert-danger danger-dismissible fade show" role="alert">
<strong class="alert text-center" align="center"> <%= alert %> </strong> 
    <button type="button" class="close" data-dismiss="alert">&times;</button>
</div>
</div>
</div>
<% end %>
</div>
</div>
</div>

