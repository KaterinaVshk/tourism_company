<%= render partial: "layouts/notification"%>
<div class="container">
<%= render "devise/shared/error_messages", resource: resource %>
<section class="contact-section spad">
   
            <div class="row">
                <div class="col-md-8 offset-md-2" >
                    <div class="contact-text">
                        <h2>Регистрация</h2>

                        <div class="col-md-8 offset-md-2">
                       
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

                          <div class="row justify-content-md-center">
                          <div class="col-md-12 mb-3">
      <%= f.label :name , " Имя:"%><br />
      <%= f.text_field :name, autofocus: true, class: "form-control"%>
  </div>
  </div>
  <div class="row justify-content-md-center">
  <div class="col-md-12 mb-3">
    <%= f.label :surname, " Фамилия:"%><br />
    <%= f.text_field :surname, autofocus: true, class: "form-control"%>
    </div>
</div>


<div class="row justify-content-md-center">
<div class="col-md-12 mb-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control"%>
  </div>
  </div>
  
  <div class="row justify-content-md-center">
<div class="col-md-12 mb-3">
    <%= f.label :phone ,"Номер телефона:"%><br />
    <%= f.text_field :phone, autofocus: true, class: "form-control"%>
  </div>
</div>

<div class="row justify-content-md-center">
<div class="col-md-12 mb-3">
    <%= f.label :password, "Пароль:" %>
    <% if @minimum_password_length %>
    <em> (Не менее <%= @minimum_password_length %> символов)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" , class: "form-control"%>
  </div>
</div>

<div class="row justify-content-md-center">
<div class="col-md-12 mb-3">
    <%= f.label :password_confirmation ,   "Подтверждение пароля:"%><br/>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" %>
  </div>
  </div>


  <div class="row justify-content-md-center">
  <div class="col-md-12 mb-3">
  <div class="action">
  <%= f.submit "зарегистрироваться" %>
  </div>
  </div>
  <div>
  
  <div class="row justify-content-md-center">
  <div class="col-md-12 mb-3">
  <%= render "devise/shared/links" %>
  </div>
  
  </div>
<% end %>

</div>
</div>
</div>
</div>

</section>
</div>