<section class="contact-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2" >
                    <div class="contact-text">
                        <h2>Регистрация</h2>

                        <div class="col-lg-8 offset-lg-2">
                       
                        <form action="#" class="contact-form">
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  
  <div class="row justify-content-between">
    <div class="column-4">
      <%= f.label :name , " Имя:"%><br />
      <%= f.text_field :name, autofocus: true, class: "form-control"%>
  </div>
    <div class="column-6">
    <%= f.label :name , " Фамилия:"%><br />
    <%= f.text_field :name, autofocus: true, class: "form-control"%>
    </div>
</div>


  <div class="row">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control"%>
  </div>
  
  <div class="row">
    <%= f.label :phone ,"Номер телефона:"%><br />
    <%= f.email_field :phone, autofocus: true, class: "form-control"%>
  </div>

  <div class="row">
    <%= f.label :password, "Пароль:" %>
    <% if @minimum_password_length %>
    <em> (Не менее <%= @minimum_password_length %> символов)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" , class: "form-control"%>
  </div>

  <div class="row">
    <%= f.label :password_confirmation ,   "Подтверждение пароля:"%><br/>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" %>
  </div>


  <div class="row">
  <div class="action">
  <button type="submit">
    зарегистрироваться
  </button>
  </div>
  </div>

<% end %>
</form>
<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>
</div>
</section>